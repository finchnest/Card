<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.abeniapps.card.recyclerview.About"
    android:background="@drawable/nav_back">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:background="@color/actionbar_opacity"
        app:title="About"
        app:titleMarginStart="0dp"
        app:theme="@style/TransparentToolbar"
        app:navigationIcon="?attr/homeAsUpIndicator"
        android:layout_height="?attr/actionBarSize"/>


    <ImageView
        android:id="@+id/aboutImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="About header"
        android:paddingTop="82dp"
        android:paddingStart="148dp"
        app:srcCompat="@mipmap/ic_launcher_round"/>

    <TextView
        android:text="This App enables you to set high quality pictures as your screen wallpaper"
        android:textAlignment="center"
        android:textIsSelectable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="30dp"
        android:paddingTop="55dp"
        android:layout_below="@+id/textView2"
        android:id="@+id/aboutTextView"
        android:textSize="14sp"
        android:textColor="#acac91"/>

    <TextView
        android:text="Version 2.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutImageView"
        android:layout_marginStart="144dp"
        android:paddingTop="5dp"
        android:textSize="12sp"
        android:id="@+id/textView2"
        android:textColor="#cec8c8"/>

    <Button
        android:text="Other Apps"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/aboutTextView"
        android:layout_marginStart="60dp"
        android:layout_marginTop="120dp"
        android:id="@+id/btn_others"
        android:background="#304105"
        android:onClick="openOtherApps"
        android:textColor="#e4e3dd"/>

    <Button
        android:text="Rate Us"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/aboutTextView"
        android:layout_marginStart="225dp"
        android:layout_marginTop="120dp"
        android:id="@+id/btn_rate"
        android:background="#304105"
        android:onClick="openRateUs"
        android:textColor="#e4e3dd"/>

</RelativeLayout>
